<!DOCTYPE html>
<html lang="eng">
	<head>
	    <meta charset="utf-8">
	    <meta http-equiv="X-UA-Compatible" content="IE=edge">
	    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	    <meta name="description" content="{{s.description}}">
	    <meta name="keywords" content="{{s.keywords}}">
	    <link rel="stylesheet" href="{{ url }}/assets/default/css/nexus.css">
	    <link rel="stylesheet" href="{{ url }}/assets/default/css/auth.css">
	    <title>{{s.title}} | Recover password</title>
	</head>
	<body>
		<div class="container">
			<div class="box">
				<div class="box-title"><i class="fa fa-magnet" aria-hidden="true"></i> Recover</div>
				<form action="{{ path_for('postRecover') }}" method="post" class="box-content">
					{% if flash.getMessage('error')[0] %}
						<div class="alert alert-danger">
							<i class="fa fa-exclamation-triangle" aria-hidden="true"></i> {{ flash.getMessage('error')[0] }}
						</div>
					{% endif %}
					{% if flash.getMessage('success')[0] %}
						<div class="alert alert-success">
							<i class="fa fa-check-circle" aria-hidden="true"></i> {{ flash.getMessage('success')[0] }}
						</div>
					{% endif %}
					<div class="form-group">
						<input type="email" name="email" id="email" class="form-input" placeholder="Enter your email">
					</div>
					<div class="form-group">
						<button type="submit" class="btn btn-info">Recover</button>
						<a href="{{ path_for('getLogin') }}" class="btn btn-danger">Back</a>
					</div>
				</form>
			</div>
		</div>
		<script src="{{ url }}/assets/default/js/lib.js"></script>
		<script src="{{ url }}/assets/default/js/nexus.js"></script>
	</body>
</html>