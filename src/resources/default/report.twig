<!DOCTYPE html>
<html lang="eng">
	<head>
	    <meta charset="utf-8">
	    <meta http-equiv="X-UA-Compatible" content="IE=edge">
	    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	    <meta name="description" content="{{s.description}}">
	    <meta name="keywords" content="{{s.keywords}}">
	    <link rel="stylesheet" href="{{ url }}/assets/default/css/nexus.css">
	    <link rel="stylesheet" href="{{ url }}/assets/default/css/auth.css">
	    <title>{{s.title}} | Report image</title>
	</head>
	<body>
		<div class="container">
			<div class="box">
				<div class="box-title">Report image</div>
				<form action="{{ path_for('postReport') }}" method="post" class="box-content">
					{% if flash.getMessage('error')[0] %}
						<div class="alert alert-danger">
							<i class="fa fa-exclamation-triangle" aria-hidden="true"></i> {{ flash.getMessage('error')[0] }}
						</div>
					{% endif %}
					{% if flash.getMessage('success')[0] %}
						<div class="alert alert-success">
							<i class="fa fa-check-circle" aria-hidden="true"></i> {{ flash.getMessage('success')[0] }}
						</div>
					{% endif %}
					<div class="form-group">
						<label for="username" class="label">Username</label>
						<input type="text" name="username" id="username" class="form-input" value="{{account.username}}">
					</div>
					<div class="form-group">
						<label for="email" class="label">Email</label>
						<input type="email" name="email" id="email" class="form-input" value="{{account.email}}">
					</div>
					<div class="form-group">
						<label for="message">Message</label>
						<textarea name="msg" class="form-input">I want to report this image: {{url}}{{path_for('getViewImage')}}/{{name}}</textarea>
					</div>
					<div class="form-group">
						<input type="hidden" name="name" value="{{name}}">
						<button type="submit" class="btn btn-info">Report</button>
						<a href="{{ path_for('getHome') }}" class="right">Back</a>
					</div>
				</form>
			</div>
		</div>
		<script src="{{ url }}/assets/default/js/lib.js"></script>
		<script src="{{ url }}/assets/default/js/nexus.js"></script>
	</body>
</html>