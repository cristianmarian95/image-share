<html>
	<head>
		<link rel="stylesheet" href="{{ url }}/assets/default/css/install.css">
		<title>Welcome to website installer v1.0</title>
	</head>
	<body>
		<div class="container">
			<h1>Admin Account</h1>
			<p class="success">Installer v1.0</p>
			<p class="danger">Please do not close the browser doing the instalation</p> 
			{% if flash %}{{ flash }}{% endif %}
			<form action="{{ path_for('postStep2') }}" method="post">
				<div class="form-group">
					<input type="text" name="username" required placeholder="Chose a username" class="form-input">
				</div>
				<div class="form-group">
					<input type="password" name="password" required placeholder="Chose a password" class="form-input">
				</div>
				<div class="form-group">
					<input type="password" name="password2" required placeholder="Type again the password" class="form-input">
				</div>
				<div class="form-group">
					<input type="email" name="email" required placeholder="Enter a valide email addres" class="form-input">
				</div>
				<div class="form-group">
					<button type="sumbmit" class="btn">Create Account</button>
				</div>
			</form>
		</div>	
	</body>
</html>