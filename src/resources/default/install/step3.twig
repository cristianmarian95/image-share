<html>
	<head>
		<link rel="stylesheet" href="{{ url }}/assets/default/css/install.css">
		<title>Welcome to website installer v1.0</title>
	</head>
	<body>
		<div class="container">
			<h1>Website Settings</h1>
			<p class="success">Installer v1.0</p>
			<p class="danger">Please do not close the browser doing the instalation</p> 
			<form action="{{ path_for('postStep3') }}" method="post">
				<div class="form-group">
					<input type="text" name="title" required placeholder="Chose a title for website" class="form-input">
				</div>
				<div class="form-group">
					<textarea name="description" required placeholder="Enter your website description" class="form-input"></textarea>
				</div>
				<div class="form-group">
					<textarea name="keywords" required placeholder="Enter your website keywords" class="form-input"></textarea>
				</div>
				<div class="form-group">
					<button type="submit" class="btn">Save and finish</button>
				</div>
			</form>
		</div>	
	</body>
</html>